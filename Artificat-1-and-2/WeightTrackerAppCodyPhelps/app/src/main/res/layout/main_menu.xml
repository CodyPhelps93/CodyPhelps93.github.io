<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/loggedInAs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Logged in as:"
        android:textSize="40sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="0dp"
        card_view:cardUseCompatPadding="true">

        <ImageButton
            android:id="@+id/ibWeightTracker"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="@android:color/transparent"
            android:contentDescription="Weight Tracking"
            android:scaleType="fitXY"
            android:src="@drawable/weight_tracker_new" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="0dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardUseCompatPadding="true"
        android:layout_marginBottom="1dp">

        <ImageButton
            android:id="@+id/ibCalorieTracker"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:background="@null"
            android:contentDescription="Calorie Tracking"
            android:scaleType="centerCrop"
            android:src="@drawable/calorie_tracking_new" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="0dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardUseCompatPadding="true"
        android:layout_marginBottom="1dp">

        <ImageButton
            android:id="@+id/ibChart"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:scaleType="fitXY"
            android:src="@drawable/graph_chart_new"
            android:contentDescription="Graphs"
            android:background="@android:color/transparent" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="0dp"
        card_view:cardUseCompatPadding="true">

        <ImageButton
            android:id="@+id/ibSMSPermissions"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="@android:color/transparent"
            android:contentDescription="SMS Permission"
            android:scaleType="fitXY"
            android:src="@drawable/sms_permission_new" />

    </androidx.cardview.widget.CardView>

</LinearLayout>